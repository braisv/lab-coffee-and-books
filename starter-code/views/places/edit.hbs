<div class="flex-cloumn">
  {{#with place}}

  <h2>Editor</h2>

    <div class="flex">

      <form action="/edit/{{this._id}}" method="POST" class="flex-column">
        <label for="name-input">Name:</label>
        <input name="name" type="text" value="{{name}}">

        <label for="address-input">Address:</label>
        <input name="address" type="text" value="{{address}}">

        <label for="lng">Longitude:</label>
        <input id="lng" type="number" step="0.000001" name="lng" placeholder="vladCrazy">

        <label for="lat">Latitude:</label>
        <input id="lat" type="number" step="0.000001" name="lat" placeholder="vladCrazy">

        <label for="type">Type:</label>
        <select id="type" type="text" name="type">
          <option value="COFFEE SHOP">COFFEE SHOP</option>
          <option value="BOOKSTORE">BOOKSTORE</option>
        </select>

        <button type="submit">Update place</button>
      </form>

    </div>

  {{/with}}
</div>